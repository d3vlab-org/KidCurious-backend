{
    "name": "kids-qa-ai/moderation-service",
    "description": "Content moderation service using OpenAI Moderation API and regex blacklist",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Kids Q&A AI Team",
            "email": "dev@kidsqaai.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "illuminate/support": "^11.0",
        "illuminate/contracts": "^11.0",
        "illuminate/cache": "^11.0",
        "guzzlehttp/guzzle": "^7.0",
        "openai-php/client": "^0.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.5",
        "orchestra/testbench": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "KidsQaAi\\ModerationService\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KidsQaAi\\ModerationService\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "KidsQaAi\\ModerationService\\ModerationServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
